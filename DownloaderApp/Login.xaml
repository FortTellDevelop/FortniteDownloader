<Window x:Class="DownloaderApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DownloaderApp"
        mc:Ignorable="d"
        Title="DownloaderApp - Login" Height="225" Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,74,0,0" Text="Username" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,102,0,0" Text="Password" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="UsrTxt" Height="23" Margin="87,72,10,0" VerticalAlignment="Top" FontSize="14"/>
        <PasswordBox x:Name="PwdTxt" Height="23" Margin="87,100,10,0" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Log In" Margin="10,128,10,30" FontSize="14" Click="LoginClick"/>
        <StatusBar Height="22" Margin="0,0,0,0" VerticalAlignment="Bottom">
            <TextBlock Name="StatusTxt"/>
        </StatusBar>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="There is zero risk of your credentials being leaked in normal use. Source code is available online if you are still uneasy." VerticalAlignment="Top" Height="57" FontSize="14"/>
    </Grid>
</Window>
